@model Telephone.ViewModels.IndividualFormViewModel

@using (@Html.BeginForm("Save", "Individuals"))
{
    <div class="row">
        <div class="col-md-offset-1 col-md-12">
            <div class="form-group form-inline">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "width:200px" } }) 
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" }) 
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" }) 
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "width:75px" } })
            </div>
        </div>
    </div>
    
    <br />
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button id="savebutton" type="submit" class="btn btn-primary">Save</button>
}



