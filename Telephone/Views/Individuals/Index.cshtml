<table class="table table-bordered table-condensed table-striped table-hover">
    <thead>
    <tr>
        <td>آی دی</td>
        <td>نام شخص</td>
        <td>تلفن مستقیم</td>
        <td>تلفن داخلی</td>
        <td>موبایل</td>
        <td>محل کار</td>
        <td>زمینه فعالیت</td>
        <td>اداره</td>
        <td>توضیحات</td>
    </tr>
    </thead>
    <tbody>
    @foreach (var person in Model)
    {
        <tr>
            <td>@person.Id</td>
            <td>@person.Name</td>
            <td>@person.TelDirect</td>
            <td>@person.TelDirect</td>
            <td>@person.Mobile</td>
            <td>@person.WorkPlace</td>
            <td>@person.FieldOfActivity</td>
            <td>@person.SetadId</td>
            <td>@person.Description</td>
        </tr>
    }
    </tbody>
</table>


