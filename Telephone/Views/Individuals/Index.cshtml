@using Telephone.ViewModels
@model IEnumerable<Telephone.Models.Individual>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>لیست اسامی افراد و شماره تماس</h2>
<br />
